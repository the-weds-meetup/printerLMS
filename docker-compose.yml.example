version: "3.9"

services:
  webserver:
    build:
      context: ./src/backend
      dockerfile: DOCKERFILE
    command: python server.py
    ports:
      - 5000:5000
    depends_on:
      - db
    volumes:
      - "./src/backend:/backend"
    environment:
      - "FLASK_ENV=development"
      - "DB_USER=superuser"
      - "DB_PASSWORD=P@ssw0rd"

  db:
    image: postgres:13
    environment:
      - "POSTGRES_USER=superuser"
      - "POSTGRES_PASSWORD=P@ssw0rd"
